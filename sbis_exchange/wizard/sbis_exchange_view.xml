<odoo>

    <record id="account_invoice_sbis_form" model="ir.ui.view">
        <field name="name">account.invoice.sbis.form</field>
        <field name="model">account.invoice.sbis</field>
        <field name="arch" type="xml">
            <form string="Upload customer invoices to SBIS">
                <div name="help-update">
                    <p>Help note.</p>
                </div>
                <group name="main">
                    <field name="edi_document_type" widget="radio"/>
                    <field name="mode_type" widget="radio" readonly="1"/>

                </group>
                <footer>
                    <button name="upload_document_to_sbis" type="object"
                            class="btn-primary" string="Upload documents to SBIS"/>
                    <button special="cancel" string="Cancel" class="oe_link"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>
