<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        
        <record id="config_settings_sbis" model="ir.ui.view">
            <field name="name">res.config.settings.inherit.sbis</field>
            <field name="model">res.config.settings</field>
            <field name="inherit_id"
                   ref="account.res_config_settings_view_form"/>
            <field name="arch" type="xml">
                <xpath expr='//app[@name="account"]' position="inside">
                    <block title="SBIS Exchange"
                           name="sbis_exchange_block"
                           invisible="not is_root_company">
                        <setting string="SBIS Exchange"
                                 id="sbis_exchange_setting">
                            <div class="content-group">
                                <div class="row mt16">
                                    <label string="SBIS Login" for="sbis_login"
                                           class="col-lg-3 o_light_label"/>
                                    <field name="sbis_login"/>
                                </div>
                                <div class="row">
                                    <label string="SBIS Password"
                                           for="sbis_password"
                                           class="col-lg-3 o_light_label"/>
                                    <field name="sbis_password"/>
                                </div>
                                <div class="row">
                                    <label string="SBIS Number Account"
                                           for="sbis_number_account"
                                           class="col-lg-3 o_light_label"/>
                                    <field name="sbis_number_account"/>
                                </div>
                            </div>
                        </setting>
                    </block>
                </xpath>
            </field>
        </record>


    </data>
</odoo>
