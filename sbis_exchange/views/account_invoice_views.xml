        <record id="invoice_form_inherit_sbis" model="ir.ui.view">
            <field name="name">account.move.form.sbis</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="arch" type="xml">
                <xpath expr="/form/header[1]" position="inside">
                    <button type="object" class="oe_stat_button"
                            id="invoice_sbis" icon="fa-cloud-upload"
                            name="upload_document_to_sbis">
<!--                            invisible="['|', ('sbis_guid', '!=', False), ('state', '=', 'draft')]">-->
                        <div class="o_form_field o_stat_info">
                            <span class="o_stat_value">
                                SBIS
                            </span>
                            <span class="o_stat_text">Send</span>
                        </div>
                    </button>
                    <button type="object" class="oe_stat_button"
                            id="open_sbis_url" icon="fa-cloud-download"
                            name="update_state_sbis">
<!--                            invisible="['|', ('sbis_url', '=', False)]">-->
                        <div class="o_form_field o_stat_info">
                            <span class="o_stat_value">
                                SBIS
                            </span>
                            <span class="o_stat_text">Update state</span>
                        </div>
                    </button>
                    <button type="object" class="oe_stat_button"
                            id="open_sbis_url" icon="fa-external-link"
                            name="open_sbis_url">
<!--                            invisible="['|', ('sbis_url', '=', False)]">-->
                        <div class="o_form_field o_stat_info">
                            <span class="o_stat_value">
                                SBIS
                            </span>
                            <span class="o_stat_text">Open</span>
                        </div>
                    </button>
                </xpath>
                <xpath expr="/form/sheet/notebook[1]" position="inside">
                    <page id="sbis_tab" name="sbis_tab"
                          string="EDI Documents">
                        <!--                          groups="account.group_account_user">-->
                        <group>
                            <field name="sbis_url" widget="url"/>
                            <field name="sbis_state"/>
                            <field name="sbis_guid" invisible="True"/>
                        </group>
                        <field name="edi_document_ids" nolabel="1"
                               widget="one2many_list" mode="tree"
                               readonly="True">
                            <tree string="EDI Documents" edit="false"
                                  readonly="1" create="false">
                                <field name="name"/>
                                <field name="state"/>
                                <field name="error"/>
                            </tree>
                        </field>
                    </page>
                </xpath>
            </field>
        </record>

        <record id="act_sbis" model="ir.actions.act_window">
            <field name="name">SBIS exchange</field>
            <field name="res_model">account.invoice.sbis</field>
            <field name="views">[[False, 'form']]</field>
            <field name="target">new</field>
            <field name="view_mode">form</field>
        </record>
    </data>

</odoo>
