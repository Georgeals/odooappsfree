<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="account_report_partner_ledger_view" model="ir.ui.view">
        <field name="name">Common Report</field>
        <field name="model">account.report.partner.ledger</field>
        <field name="arch" type="xml">
            <form string="Report Options">
                <field name="company_id" invisible="1"/>
                <group col="4">
                    <field name="target_move" widget="radio"/>
                    <field name="date_from"/>
                    <field name="date_to"/>
                </group>
                <group>
                    <field name="partner_ids" widget="many2many_tags"/>
                    <field name="journal_ids" widget="many2many_tags"
                           options="{'no_create': True}"/>
                </group>
                <footer>
                        <button name="check_report_without_stamp"
                                string="Печать" type="object" default_focus="1"
                                class="oe_highlight"/>
                        или
                        <button string="Отменить" class="oe_link"
                                special="cancel"/>
                        или
                        <button name="check_report"
                                string="С подписью и печатью" type="object"
                                class="oe_highlight"/>
                    </footer>
            </form>
        </field>
    </record>
</odoo>
