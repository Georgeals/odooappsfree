<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

    <record id="view_company_ru_form" model="ir.ui.view">
        <field name="name">res.company.ru.form</field>
        <field name="model">res.company</field>
        <field name="inherit_id" ref="base.view_company_form"/>
        <field name="arch" type="xml">
            <data>
                <field name="email" position="after">
                    <field name="vat"/>
                    <field name="kpp"/>
                    <field name="okpo"/>
                    <field name="bank_id"/>
                </field>
                <xpath expr="//page" position="after">
                    <page string="Configuration">
                        <group string="Responsible Persons">
                            <field name="chief_id"/>
                            <field name="accountant_id"/>
                        </group>
                        <group string="Documents">
                            <field name="print_facsimile"/>
                            <field name="print_stamp"/>
                            <field name="print_anywhere"/>
                            <field name="stamp" widget="image" class="oe_avatar artline_stamp" invisible="print_stamp == False"/>
                        </group>
                    </page>
                </xpath>
                <xpath expr="//field[@name='currency_id']" position="after">
                    <field name="partner_id" invisible="1"/>
                    <field name="partner_is_company"/>
                    <field name="company_type_ru" invisible="partner_is_company == True" required="partner_is_company == False"/>
                </xpath>
                <xpath expr="//field[@name='vat']" position="replace">
                </xpath>
            </data>
        </field>
    </record>

    </data>
</openerp>
